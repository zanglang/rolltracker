<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/"> 
	
	<Script file="RollTracker.lua"/>

	<Frame name="RollTrackerFrame" parent="UIParent" hidden="true" movable="true" enableMouse="true" frameStrata="HIGH" resizable="true">
		<Size><AbsDimension x="180" y="216"/></Size>
		<Anchors>
			<Anchor point="CENTER"/>
			<Offset><AbsDimension x="300" y="0"/></Offset>
		</Anchors>
		<Backdrop name="$parentBackdrop" bgFile="Interface\TutorialFrame\TutorialFrameBackground"
		edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="64"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>	
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentTitle" inherits="GameFontNormal" text="Roll Tracker" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="10" y="-10"/>
							</Offset>
						</Anchor>
						<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT">
							<Offset>
								<AbsDimension x="-10" y="-30"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<FontString name="$parentStatusText" inherits="GameFontNormalSmall" text="0 Rolls" justifyH="LEFT" justifyV="TOP">
					<Color r="0.5" g="0.5" b="1.0"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="10" y="10"/>
							</Offset>
						</Anchor>
						<Anchor point="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="0" y="20"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>		
			</Layer>
		</Layers>

		<Frames>
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="RollTrackerFrame" relativePoint="TOPRIGHT"/>
				</Anchors>
				<Scripts>
					<OnClick>
						RollTracker_HideWindow()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parentClearButton" inherits="UIPanelButtonTemplate" text="Clear">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeTo="$parentStatusText">
						<Offset>
							<AbsDimension x="-4" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Size><AbsDimension x="75" y="16"/></Size>
				<Scripts>
					<OnClick>
						RollTracker_ClearRolls()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentRollButton" inherits="UIPanelButtonTemplate" text="Roll">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" relativeTo="$parentStatusText">
						<Offset>
							<AbsDimension x="-4" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Size><AbsDimension x="75" y="16"/></Size>
				<Scripts>
					<OnClick>
						RandomRoll(1, 100)
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentResizeGrip" inherits="UIPanelButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="RollTrackerFrame">
					</Anchor>
				</Anchors>
				<Size><AbsDimension x="16" y="16"/></Size>
				<NormalTexture file="Interface\AddOns\RollTracker\ResizeGrip.tga"/>
				<PushedTexture file="Interface\AddOns\RollTracker\ResizeGrip.tga"/>
				<Scripts>
					<OnMouseDown>
						RollTrackerFrame:StartSizing()
					</OnMouseDown>
					<OnMouseUp>
						RollTrackerFrame:StopMovingOrSizing();
					</OnMouseUp>
				</Scripts>
			</Button>
			<ScrollFrame name="$parentRollScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="6" y="-30"/>
						</Offset>
					</Anchor>
					<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" relativeTo="$parentRollButton">
						<Offset>
							<AbsDimension x="-24" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<ScrollChild>
					<Frame name="$parentScrollChild">
						<Size>
							<AbsDimension x="30" y="30"/>
						</Size>
						<Frames>
							<SimpleHTML name="RollTrackerRollText">

								<Anchors>
									<Anchor point="TOPLEFT" relativeTo="RollTrackerFrameRollScrollFrameScrollChild">
										<Offset>
											<AbsDimension x="0" y="-2"/>
										</Offset>
									</Anchor>
									<Anchor point="BOTTOMRIGHT" relativeTo="RollTrackerFrameRollScrollFrame">
										<Offset>
											<AbsDimension x="0" y="2"/>
										</Offset>
									</Anchor>
								</Anchors>
								<FontString name="RollTrackerFontString" inherits="ChatFontNormal" justifyH="LEFT" justifyV="TOP">
									<Size>
										<AbsDimension x="270" y="0"/>
									</Size>
									<Color r="1" g="1" b="1" a="1.0" />
								</FontString>
							</SimpleHTML>
						</Frames>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
		
		<Scripts>
			<OnLoad>
				RollTracker_OnLoad()
				this:SetMinResize(130,150)
				this:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnEvent>
				if (event == "CHAT_MSG_SYSTEM") then
					RollTracker_CHAT_MSG_SYSTEM();
				end
			</OnEvent>
			<OnDragStart>
				this:StartMoving()
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>